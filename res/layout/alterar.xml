<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Listar"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/etNomeAlterar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignRight="@+id/btProximo"
        android:layout_below="@+id/textView3"
        android:ems="10" >

    </EditText>

    <Button
        android:id="@+id/btAnterior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btAlterarXml"
        android:layout_alignLeft="@+id/textView5"
        android:layout_toLeftOf="@+id/textView2"
        android:text="Anterior" />

    <EditText
        android:id="@+id/etTelefoneAlterar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btAnterior"
        android:layout_below="@+id/textView5"
        android:ems="10" />

    <EditText
        android:id="@+id/etEnderecoAlterar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:ems="10" >

    </EditText>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etEnderecoAlterar"
        android:layout_below="@+id/etEnderecoAlterar"
        android:layout_marginTop="26dp"
        android:text="Telefone"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btAlterarXml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btAnterior"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btAnterior"
        android:text="Alterar" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etNomeAlterar"
        android:layout_below="@+id/imageView1"
        android:text="Nome:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etNomeAlterar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="EndereÃ§o:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btProximo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btAnterior"
        android:layout_alignBottom="@+id/btAnterior"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignRight="@+id/etTelefoneAlterar"
        android:layout_marginLeft="38dp"
        android:text="Proximo" />

    <Button
        android:id="@+id/btVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btAlterarXml"
        android:layout_alignBottom="@+id/btAlterarXml"
        android:layout_alignLeft="@+id/btProximo"
        android:layout_alignRight="@+id/btProximo"
        android:text="Voltar" />

</RelativeLayout>